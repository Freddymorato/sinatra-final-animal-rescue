<div class="body-content">
  <div class="animal-card">
    <h1>Name: <%= @animal.name %></h1>
    <p>Species: <%= @animal.species %></p>
    <p>Breed: <%= @animal.breed %></p>
    <p>Age: <%= @animal.age %> years old</p>
    <p>Shelter: <%= @animal.shelter.name %></p>

    <% if @animal.shelter.user_id == current_user.id %>
      <p><a href="/animals/<%= @animal.id %>/edit" class="btn btn-default btn-sm">Edit Animal</a></p><br>
    <% end %>
  </div>

  <br>
  <a href="/animals" class="btn btn-default btn-sm">View All Animals</a>

</div>

